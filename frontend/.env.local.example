# Frontend Environment Configuration Template
# Copy this file to .env.local and update the values as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Application Information
VITE_APP_TITLE=YOLO Object Detection
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-powered object detection using YOLO models

# File Upload Configuration
VITE_MAX_FILE_SIZE=50000000
VITE_SUPPORTED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/bmp
VITE_SUPPORTED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/mkv

# Feature Flags
VITE_ENABLE_VIDEO_UPLOAD=true
VITE_ENABLE_REALTIME_DETECTION=false
VITE_ENABLE_BATCH_PROCESSING=true
VITE_ENABLE_MODEL_SELECTION=false
VITE_ENABLE_ADVANCED_SETTINGS=true

# UI Configuration
VITE_DEFAULT_CONF_THRESHOLD=0.5
VITE_DEFAULT_IOU_THRESHOLD=0.45
VITE_RESULTS_PER_PAGE=10
VITE_MAX_DETECTION_HISTORY=50

# Development Configuration
VITE_ENABLE_DEBUG=true
VITE_SHOW_API_LOGS=true
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_MIXPANEL_TOKEN=
VITE_HOTJAR_ID=

# Social Media (Optional)
VITE_GITHUB_URL=https://github.com/your-username/yolo-detection
VITE_TWITTER_URL=
VITE_DISCORD_URL=

# External Services (Optional)
VITE_SENTRY_DSN=
VITE_AMPLITUDE_API_KEY=

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_PRIMARY_COLOR=#3b82f6
VITE_ACCENT_COLOR=#10b981

# Demo Configuration
VITE_DEMO_MODE=false
VITE_DEMO_IMAGES_URL=
VITE_DEMO_VIDEOS_URL=

# Progressive Web App
VITE_PWA_ENABLED=true
VITE_MANIFEST_NAME=YOLO Detection
VITE_MANIFEST_SHORT_NAME=YOLO

# Performance Configuration
VITE_ENABLE_LAZY_LOADING=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600000

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ALLOWED_DOMAINS=localhost,127.0.0.1

# Experimental Features
VITE_ENABLE_WEBGL=false
VITE_ENABLE_WEBWORKERS=false
VITE_ENABLE_OFFLINE_MODE=false